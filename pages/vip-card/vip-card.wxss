.page {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .card-box {
  padding: 30rpx 50rpx;
  box-sizing: border-box;
}
.page .card-box .card {
  width: 100%;
  height: 375rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  box-shadow: 0, 0, 15rpx, #eeeeee;
  border-radius: 10rpx;
  overflow: hidden;
  align-items: center;
}
.page .card-box .card .back {
  position: absolute;
  width: 100%;
  height: 100%;
}
.page .card-box .card .left {
  z-index: 2;
  display: flex;
  flex-direction: column;
  padding-left: 50rpx;
  box-sizing: border-box;
}
.page .card-box .card .left .line1 {
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
  opacity: 0.5;
}
.page .card-box .card .left .line2 {
  font-size: 66rpx;
  margin-top: 50rpx;
  font-weight: 800;
  color: #FFFFFF;
}
.page .card-box .card .right {
  margin-right: 30rpx;
  margin-top: -80rpx;
  box-sizing: border-box;
  z-index: 2;
  width: 150rpx;
  height: 60rpx;
  border: 1px solid #FFFFFF;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.page .border-box {
  margin-top: 30rpx;
  width: 100%;
  height: 20rpx;
  background: #F8F8F8;
}
.page .bottom-box {
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.page .bottom-box .title {
  border-left: 6rpx solid #3373FF;
  padding-left: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.page .bottom-box .items {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page .bottom-box .items .item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 38rpx 0;
  border-bottom: 1px solid #F0F0F0;
}
.page .bottom-box .items .item .left {
  display: flex;
  flex-direction: column;
}
.page .bottom-box .items .item .left .line1 {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.page .bottom-box .items .item .left .line1 image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
}
.page .bottom-box .items .item .left .line1 text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}
.page .bottom-box .items .item .left .line2 {
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  margin-top: 15rpx;
}
.page .bottom-box .items .item .right {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
