.page {
  width: 100%;
  min-height: 100vh;
}
.page .items {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.page .items .item {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.page .items .item .image {
  width: 100%;
  height: 350rpx;
  background: #102242;
  opacity: 0.3;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page .items .item .image .play {
  width: 100rpx;
  height: 100rpx;
}
.page .items .item .title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  padding: 30rpx 0;
}
